# Backend environment variables for Atlassian OAuth (Jira/Confluence)
# Copy to .env and fill values; do NOT commit real secrets.

# Core
APP_ENV=development
DEV_MODE=true
LOG_LEVEL=INFO

# CORS origins (comma-separated). Add your frontend origin here.
BACKEND_CORS_ORIGINS=https://your-frontend.example.com

# Frontend base URL used only for post-auth redirects to the UI (NOT for Atlassian redirect_uri)
APP_FRONTEND_URL=https://your-frontend.example.com

# Atlassian Cloud base URL (your site base, e.g., https://your-team.atlassian.net)
ATLASSIAN_CLOUD_BASE_URL=https://your-team.atlassian.net

# Jira OAuth (3LO) configuration
# Required: Client ID and Client Secret from Atlassian developer console
JIRA_OAUTH_CLIENT_ID=your_jira_client_id_here
JIRA_OAUTH_CLIENT_SECRET=your_jira_client_secret_here

# Required: Exact Redirect URI configured in Atlassian app for Jira.
# Must match exactly. The backend will prefer this value.
JIRA_REDIRECT_URI=https://your-backend.example.com/auth/jira/callback

# Optional: Distinct Confluence app credentials, otherwise Jira values are reused.
CONFLUENCE_OAUTH_CLIENT_ID=
CONFLUENCE_OAUTH_CLIENT_SECRET=
# If you have a distinct Confluence redirect URI, set it; else backend derives canonical value similarly to Jira.
CONFLUENCE_OAUTH_REDIRECT_URI=

# Optional state signing secret; if not set, a development default is used.
STATE_SIGNING_SECRET=change-me-to-a-strong-random-string
