# Integration Backend .env.example
# Backend must run on port 3001; frontend on 3000.

# Application
APP_ENV=development
DEV_MODE=true
LOG_LEVEL=INFO

# Frontend base URL (used for post-auth UI redirect)
APP_FRONTEND_URL=http://localhost:3000

# CORS: allow frontend on 3000 (comma-separated list supported)
BACKEND_CORS_ORIGINS=http://localhost:3000

# Atlassian Cloud base URL for your site (e.g., https://your-team.atlassian.net)
ATLASSIAN_CLOUD_BASE_URL=

# Jira OAuth 2.0 (3LO) credentials
JIRA_OAUTH_CLIENT_ID=
JIRA_OAUTH_CLIENT_SECRET=

# Canonical redirect URI registered in Atlassian Developer Console (STRICT)
# Must use backend port 3001. Change host for each environment accordingly.
# Local example:
# JIRA_REDIRECT_URI=http://localhost:3001/auth/jira/callback
# Deployment example (provided by task):
# ATLASSIAN_REDIRECT_URI=https://vscode-internal-29161-beta.beta01.cloud.kavia.ai:3001/api/oauth/callback/jira
JIRA_REDIRECT_URI=http://localhost:3001/auth/jira/callback

# Confluence OAuth (optional: otherwise Jira values/fallbacks are used)
CONFLUENCE_OAUTH_CLIENT_ID=
CONFLUENCE_OAUTH_CLIENT_SECRET=
# If left empty, backend will use the Jira canonical redirect fallback builder to a 3001 URL.
CONFLUENCE_OAUTH_REDIRECT_URI=

# Database URL: default is a local sqlite file
INTEGRATION_DB_URL=sqlite:///./integration.db
