# Copy to .env and fill with your values. Do NOT commit real secrets.
ATLASSIAN_CLOUD_BASE_URL=https://your-team.atlassian.net

# Jira OAuth (can be shared with Confluence if using one app)
JIRA_OAUTH_CLIENT_ID=your-client-id
JIRA_OAUTH_CLIENT_SECRET=your-client-secret
JIRA_OAUTH_REDIRECT_URI=https://yourapp.com/api/auth/jira/callback

# Confluence OAuth (optional if same as Jira)
CONFLUENCE_OAUTH_CLIENT_ID=
CONFLUENCE_OAUTH_CLIENT_SECRET=
CONFLUENCE_OAUTH_REDIRECT_URI=https://yourapp.com/api/auth/confluence/callback

# Where to send user after successful auth
APP_FRONTEND_URL=http://localhost:3000

# Database (optional; defaults to local SQLite file)
INTEGRATION_DB_URL=sqlite:///./integration.db
