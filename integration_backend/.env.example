# Backend example configuration (.env)
# Copy to integration_backend/.env and fill with your values.

# Public base URLs (used for redirects and diagnostics)
BACKEND_BASE_URL=https://your-backend.example.com
FRONTEND_BASE_URL=https://your-frontend.example.com

# CORS allowlist (comma-separated origins). Include the active frontend origin.
BACKEND_CORS_ORIGINS=https://your-frontend.example.com,http://localhost:3000,https://localhost:3000

# Atlassian OAuth with PKCE (recommended)
ATLASSIAN_CLIENT_ID=
ATLASSIAN_CLIENT_SECRET=
ATLASSIAN_REDIRECT_URI=https://your-backend.example.com/api/oauth/callback/atlassian
ATLASSIAN_SCOPES=read:jira-work read:jira-user read:confluence-content.all read:confluence-space.summary offline_access

# Legacy Jira OAuth (non-PKCE) used by /auth/jira/login and /auth/jira/callback
JIRA_OAUTH_CLIENT_ID=
JIRA_OAUTH_CLIENT_SECRET=
JIRA_OAUTH_REDIRECT_URI=https://your-backend.example.com/auth/jira/callback

# Atlassian cloud base URL used to store base URLs on user records
ATLASSIAN_CLOUD_BASE_URL=https://your-team.atlassian.net

# Database configuration
INTEGRATION_DB_URL=sqlite:///./integration.db

# Logging
LOG_LEVEL=INFO
