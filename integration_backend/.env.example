# Backend environment example for Integration Backend (FastAPI)

# App environment
APP_ENV=development
DEV_MODE=true
LOG_LEVEL=INFO

# CORS origins (comma-separated). Use * for all (dev only).
BACKEND_CORS_ORIGINS=http://localhost:3000,https://localhost:3000

# Database (defaults to local sqlite if not set)
# INTEGRATION_DB_URL=sqlite:///./integration.db

# Frontend base URL (used for redirects after OAuth callbacks)
APP_FRONTEND_URL=http://localhost:3000

# Atlassian base URL for your site (optional but recommended)
ATLASSIAN_CLOUD_BASE_URL=https://your-team.atlassian.net

# Jira OAuth 2.0 (3LO)
JIRA_OAUTH_CLIENT_ID=
JIRA_OAUTH_CLIENT_SECRET=
JIRA_OAUTH_REDIRECT_URI=http://localhost:3001/auth/jira/callback

# Confluence OAuth 2.0 (can reuse Jira values if not separate)
CONFLUENCE_OAUTH_CLIENT_ID=
CONFLUENCE_OAUTH_CLIENT_SECRET=
CONFLUENCE_OAUTH_REDIRECT_URI=http://localhost:3001/auth/confluence/callback

# Common frontend-style fallbacks that the backend can read if present
NEXT_PUBLIC_APP_FRONTEND_URL=
NEXT_PUBLIC_FRONTEND_BASE_URL=
NEXT_PUBLIC_ATLASSIAN_CLOUD_BASE_URL=
NEXT_PUBLIC_JIRA_OAUTH_CLIENT_ID=
NEXT_PUBLIC_JIRA_OAUTH_CLIENT_SECRET=
NEXT_PUBLIC_JIRA_OAUTH_REDIRECT_URI=
NEXT_PUBLIC_ATLASSIAN_CLIENT_ID=
NEXT_PUBLIC_ATLASSIAN_CLIENT_SECRET=
NEXT_PUBLIC_ATLASSIAN_REDIRECT_URI=
NEXT_PUBLIC_CONFLUENCE_OAUTH_CLIENT_ID=
NEXT_PUBLIC_CONFLUENCE_OAUTH_CLIENT_SECRET=
NEXT_PUBLIC_CONFLUENCE_OAUTH_REDIRECT_URI=
NEXT_PUBLIC_BACKEND_CORS_ORIGINS=
