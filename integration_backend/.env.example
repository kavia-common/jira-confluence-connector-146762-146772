# Integration Backend .env.example
# Copy to integration_backend/.env and customize values for your environment.

# Logging
LOG_LEVEL=INFO
DEV_MODE=false

# CORS: Comma-separated list of allowed origins for the frontend.
# Example: https://localhost:3000,https://myapp.example.com
# When using cookies/credentials, do NOT use "*". You must set explicit origins.
ALLOWED_ORIGINS=http://localhost:3000,https://vscode-internal-12731-beta.beta01.cloud.kavia.ai:3000

# Legacy fallbacks (will be read only if ALLOWED_ORIGINS is unset)
# BACKEND_CORS_ORIGINS=
# NEXT_PUBLIC_BACKEND_CORS_ORIGINS=

# Frontend URL used for post-auth redirection (not for CORS)
APP_FRONTEND_URL=https://vscode-internal-12731-beta.beta01.cloud.kavia.ai:3000

# Atlassian Jira OAuth
ATLASSIAN_CLOUD_BASE_URL=https://your-team.atlassian.net
JIRA_OAUTH_CLIENT_ID=your-client-id
JIRA_OAUTH_CLIENT_SECRET=your-client-secret
# Must exactly match the Atlassian developer console Redirect URI
JIRA_REDIRECT_URI=https://your-backend.example.com/auth/jira/callback

# Security
SECRET_KEY=change-me
STATE_SIGNING_SECRET=change-me

# Database (optional; defaults to sqlite:///./integration.db)
# INTEGRATION_DB_URL=postgresql+psycopg2://user:pass@host:5432/dbname
